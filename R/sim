med<-c()
pv<-c()
sapply(1:1000, function(x) source("mediansim")$value)
v<-data.frame(med,pv)
postscript('sim.eps',paper='us',horizontal=T)
par(mfrow=c(2,2))
plot(fit,main='Survival curve',lty=c(1,3),bty='n')
legend(2.5,0.9,c('Patient data','Simulation'),lty=c(1,3),bty='n')
boxplot(v$med,main='Boxplot of survival medians',frame.plot=F)
hist(Surv,main='Histogram of survival times')
plot(density(v$pv),main='Kernel density plot of p values',bty='n')
dev.off()
